<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    android:background="@drawable/dialog_update_background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_confrim"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/dialog_update_button"
        android:gravity="center"
        android:singleLine="true"
        android:text="立即下载"
        android:textColor="@color/bg_white"
        android:textSize="15sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        android:scrollbars="none">

        <TextView
            android:id="@+id/dialog_update_content"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@id/tv_title"
            android:gravity="center"
            android:textSize="15sp" />
    </ScrollView>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialog_update_title"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/update_text"
        android:textColor="@color/bg_white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/close_white" />

</RelativeLayout>